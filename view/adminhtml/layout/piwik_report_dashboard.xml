<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="page.main.actions">
            <block class="Magento\Backend\Block\Store\Switcher"
                   name="store.switcher"
                   template="Magento_Backend::store/switcher.phtml">
                <action method="setUseConfirm">
                    <argument name="params" xsi:type="string">0</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="content">
            <block class="Henhed\Piwik\Block\Adminhtml\Report\Dashboard"
                   name="piwik.report.dashboard"
                   template="report/dashboard.phtml" />
        </referenceContainer>
    </body>
</page>
